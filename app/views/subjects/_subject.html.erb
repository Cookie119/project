<div class="w-full mx-auto md:w-2/3 bg-white rounded-lg shadow-md p-6 mb-4">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:  <%= subject.name %></strong>
   
  </p>

  <% if action_name != "show" %>
    <div class="flex items-center">
    <%= link_to "Show this subject", subject, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mr-2" %>
<%= link_to "Edit this subject", edit_subject_path(subject), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mr-2" %>
<%= button_to "Delete", subject_path(subject), method: :delete, class: "rounded-lg py-3 px-5 bg-red-500 text-white inline-block font-medium", data: { confirm: "Are you sure you want to delete #{subject.name}?" } %>

    </div>
    <hr class="mt-6">
  <% end %>
</div>
