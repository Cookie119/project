<div id="<%= dom_id division %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Division:</strong>
    <%= division.division %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this division", division, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this division", edit_division_path(division), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
