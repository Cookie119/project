<div class="mx-auto md:w-2/3 w-full m-12">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-100 text-green-800 mb-5 font-medium rounded-lg text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= render @addstudent %>

    <div class="mt-4">
      <div class="flex items-center justify-center gap-2">
        <%= link_to "Edit", edit_addstudent_path(@addstudent), class: "rounded-lg py-2 px-4 bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition duration-300" %>
        
        <%= button_to "Destroy", addstudent_path(@addstudent), method: :delete, data: { confirm: 'Are you sure?' }, class: "rounded-lg py-2 px-4 bg-red-200 text-red-800 font-medium hover:bg-red-300 transition duration-300" %>
        
        <%= link_to "Back to Addstudents", addstudents_path, class: "rounded-lg py-2 px-4 bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition duration-300" %>
      </div>
    </div>
  </div>
</div>
