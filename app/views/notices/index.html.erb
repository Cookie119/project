<div class="w-full">
  <% if notice.present? %>
    <div class="flex justify-center items-center mb-5">
      <div class="bg-green-100 border border-green-500 text-green-700 px-4 py-2 rounded-lg" role="alert">
        <%= notice %>
      </div>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-4">
  <div>
  <nav aria-label="breadcrumb">
    <ul class="flex flex-wrap space-x-3 text-sm font-medium">
        <li class="flex items-center space-x-3">
            <a href="#" class="flex items-center space-x-1 text-gray-800">
                <svg class="h-4 w-4 shrink-0 fill-gray-500" aria-hidden="true" viewBox="0 0 256 256">
                    <path
                        d="M184 32H72A16 16 0 0056 48V224a8.1 8.1.0 004.1 7 7.6 7.6.0 003.9 1 7.9 7.9.0 004.2-1.2L128 193.4l59.7 37.4a8.3 8.3.0 008.2.2 8.1 8.1.0 004.1-7V48A16 16 0 00184 32z">
                    </path>
                </svg>
                <%=link_to"Dashboard", maker_index_path %>
            </a>
        </li>
        <li class="flex items-center space-x-3">
            <div aria-hidden="true" class="h-4 w-px rotate-12 rounded-full bg-gray-300"></div>
            <a href="#" class="flex items-center space-x-1 text-gray-800">
                <svg class="h-4 w-4 shrink-0 fill-gray-500" aria-hidden="true" viewBox="0 0 256 256">
                    <path
                        d="M2e2 32H163.7a47.8 47.8.0 00-71.4.0H56A16 16 0 0040 48V216a16 16 0 0016 16H2e2a16 16 0 0016-16V48A16 16 0 002e2 32zm-72 0a32.1 32.1.0 0132 32H96a32.1 32.1.0 0132-32z">
                    </path>
                </svg>
                <span>Notice</span>
            </a>
        </li>
     
    </ul>
</nav>
  </div>
    <h1 class="font-bold text-4xl text-gray-800 m-4">Notices</h1>

    <%= link_to "New Notice", new_notice_path, class: "rounded-lg py-3 px-6 bg-blue-600 text-white font-semibold hover:bg-blue-700 transition duration-300 mx-4 mt-[10px] " %>
  </div>
  <div class="overflow-x-auto">
    <div class="flex flex-col">
      <% @notices.each do |notice| %>
        <div class="bg-white border border-gray-300 rounded-lg mb-4 p-4 shadow-md">
          <p class="text-gray-800 font-semibold text-lg mb-2">Title: <%= notice.title %></p>
          <p class="text-gray-700 mb-2">Category: <%= notice.category.name %></p>
          <p class="text-gray-700 mb-2">Content: <%= truncate(notice.content, length: 70) %></p>

          <% if notice.image.attached? %>
            <div class="mt-2">
              <%= image_tag(notice.image, class: "rounded-full h-20 w-20 object-cover") %>
            </div>
          <% end %>

          <div class="mt-4 flex space-x-4">
            <%= link_to "Show this notice", notice, class: "rounded-lg py-2 px-4 bg-blue-500 text-white font-semibold hover:bg-blue-600 transition duration-300" %>
            <%= link_to "Edit this notice", edit_notice_path(notice), class: "rounded-lg py-2 px-4 bg-green-500 text-white font-semibold hover:bg-green-600 transition duration-300" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
